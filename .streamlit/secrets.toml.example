# Configuración de secrets para Streamlit Cloud
# En Streamlit Cloud: Settings → Secrets → pega este contenido

# API Keys para LLMs
GOOGLE_API_KEY = "TU_API_KEY_DE_GOOGLE_AQUI"
LLM_PROVIDER = "gemini"

# Opcional: Otras API keys (solo si las vas a usar)
# ANTHROPIC_API_KEY = "sk-ant-api03-..."
# OPENAI_API_KEY = "sk-..."

# PostgreSQL para producción (OBLIGATORIO para Streamlit Cloud)
[postgres]
connection_string = "postgresql://usuario:password@host.supabase.co:5432/postgres"
# Misma conexión para historial IA (puedes usar la misma base de datos)
connection_string_historial = "postgresql://usuario:password@host.supabase.co:5432/postgres"
